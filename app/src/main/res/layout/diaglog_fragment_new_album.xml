<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg.dialog.album.fragment">

    <com.example.thong.playmusic.widget.NewAlbumSpinner
        android:id="@+id/planetSpinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout.50"
        android:layout_marginLeft="@dimen/margin.10"
        android:layout_marginRight="@dimen/margin.10"
        android:layout_marginTop="@dimen/margin.20"
        android:background="@drawable/bg_btn_new_album" />

    <EditText
        android:id="@+id/edtNameAlbum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout.50"
        android:layout_below="@id/planetSpinner"
        android:layout_marginLeft="@dimen/margin.10"
        android:layout_marginRight="@dimen/margin.10"
        android:layout_marginTop="@dimen/margin.10"
        android:background="@drawable/bg_edt_new_album"
        android:gravity="center"
        android:hint="@string/edt.name.album.diaglog.fragment" />


    <LinearLayout
        android:id="@+id/rlBeetween"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNameAlbum"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/layout.50"
            android:layout_marginBottom="@dimen/margin.10"
            android:layout_marginLeft="@dimen/margin.10"
            android:layout_marginStart="@dimen/margin.10"
            android:layout_marginRight="@dimen/margin.20"
            android:layout_marginEnd="@dimen/margin.20"
            android:layout_marginTop="@dimen/margin.10"
            android:background="@drawable/bg_btn_new_album"
            android:gravity="center"
            android:text="@string/txt.cancel.dialog.fragment"
            android:textSize="@dimen/textsize.18" />

        <TextView
            android:id="@+id/txtSubmit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/layout.50"
            android:layout_marginBottom="@dimen/margin.20"
            android:layout_marginLeft="@dimen/margin.20"
            android:layout_marginRight="@dimen/margin.10"
            android:layout_marginStart="@dimen/margin.20"
            android:layout_marginEnd="@dimen/margin.10"
            android:layout_marginTop="@dimen/margin.10"
            android:background="@drawable/bg_btn_new_album"
            android:gravity="center"
            android:text="@string/txt.submit.dialog.fragment"
            android:textSize="@dimen/textsize.18" />
    </LinearLayout>
</RelativeLayout>
