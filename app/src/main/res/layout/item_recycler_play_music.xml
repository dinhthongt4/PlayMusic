<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameMusic"
        android:text="Dem mua mot minh anh"
        android:textSize="@dimen/text.size.15"
        android:paddingLeft="@dimen/margin.10"
        android:layout_marginTop="@dimen/margin.10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameArtist"
        android:text="by Dinh Thong"
        android:layout_below="@id/txtNameMusic"
        android:textSize="@dimen/text.size.13"
        android:paddingLeft="@dimen/margin.10"
        android:layout_marginBottom="@dimen/margin.10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout.1"
        android:id="@+id/rlLine"
        android:background="@color/bg.header.main.activity"
        android:layout_alignParentBottom="true"
        ></RelativeLayout>
</RelativeLayout>
