<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin.10"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout.1"
        android:background="@color/txt.default"
        android:id="@+id/rlLine"/>

    <ImageView
        android:layout_width="@dimen/layout.50"
        android:layout_height="@dimen/layout.50"
        android:id="@+id/imgMediaPlayer"
        android:layout_below="@id/rlLine"
        android:src="@drawable/ic_avatar_music"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />
    


    <ImageView
        android:layout_width="@dimen/layout.20"
        android:layout_height="@dimen/layout.20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin.10"
        android:id="@+id/imgDownload"
        android:src="@drawable/ic_download"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="@dimen/layout.20"
        android:layout_height="@dimen/layout.20"
        android:id="@+id/imgAddAlbum"
        android:layout_marginRight="@dimen/margin.10"
        android:layout_marginTop="@dimen/margin.10"
        android:src="@drawable/ic_add_album"
        android:layout_toLeftOf="@id/imgDownload"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameMediaPlayer"
        android:textSize="@dimen/textsize.18"
        android:layout_toRightOf="@id/imgMediaPlayer"
        android:layout_marginLeft="@dimen/margin.10"
        android:layout_marginTop="@dimen/margin.10"
        android:layout_toLeftOf="@+id/imgAddAlbum"
        android:textColor="@color/txt.default"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded,UnknownIdInLayout"
        android:layout_marginRight="@dimen/margin.10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtArtistMediaPlayer"
        android:textSize="@dimen/text.size.15"
        android:layout_toRightOf="@id/imgMediaPlayer"
        android:layout_marginLeft="@dimen/margin.10"
        android:layout_toLeftOf="@+id/imgAddAlbum"
        android:layout_below="@id/txtNameMediaPlayer"
        android:textColor="@color/txt.default"
        android:maxLines="1"
        tools:ignore="RtlHardcoded,UnknownIdInLayout"
        android:layout_marginRight="@dimen/margin.10"/>

</RelativeLayout>
