<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tab_bar"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/txt.musics.tab.bar"
            android:gravity="center"
            android:id="@+id/txtMusics"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_bar"
            android:textColor="@color/txt.default"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/txt.albums.tab.bar"
            android:gravity="center"
            android:id="@+id/txtAlBums"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_bar"
            android:textColor="@color/txt.default"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/txt.videos.tab.bar"
            android:gravity="center"
            android:id="@+id/txtVideo"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_bar"
            android:textColor="@color/txt.default"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/txt.online.tab.bar"
            android:gravity="center"
            android:id="@+id/txtOnline"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_bar"
            android:textColor="@color/txt.default"
            />
    </LinearLayout>
</RelativeLayout>
