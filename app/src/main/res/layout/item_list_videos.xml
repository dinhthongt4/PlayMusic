<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin.10"
    android:paddingTop="@dimen/margin.10"
    >

    <ImageView
        android:id="@+id/imgThumbnailVideo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout.120"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtNameVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgThumbnailVideo"
        android:textColor="@color/txt.default"
        android:textSize="@dimen/text.size.15" />

    <TextView
        android:id="@+id/txtNameChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameVideo"
        android:textSize="@dimen/text.size.13"
        android:textColor="@color/txt.chanel.video"
        />

    <TextView
        android:id="@+id/txtDatePublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameChannel"
        android:textSize="@dimen/text.size.13"
        android:textColor="@color/txt.chanel.video"/>
</RelativeLayout>
